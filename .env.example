# Environment Configuration Example
# Copy this file to .env.local for local development or .env for production use

# API Configuration
# ----------------------------
# Base URL for the authentication/backend API
VITE_API_URL=http://localhost:3000/api

# Authentication
# ----------------------------
# Enable/disable email verification requirement (true/false)
VITE_AUTH_REQUIRE_EMAIL_VERIFICATION=false

# Token expiration time in minutes
VITE_AUTH_TOKEN_EXPIRATION=60

# Feature Flags
# ----------------------------
# Enable/disable admin features (true/false)
VITE_FEATURE_ADMIN_PANEL=true

# Enable/disable dark mode toggle (true/false)
VITE_FEATURE_DARK_MODE=true

# Application Configuration
# ----------------------------
# Application name (displayed in the UI)
VITE_APP_NAME=Simple Accounting Dashboard

# Application version
VITE_APP_VERSION=1.0.0

# Environment name (development, staging, production)
VITE_APP_ENVIRONMENT=development

# Analytics and Monitoring (if applicable)
# ----------------------------
# VITE_ANALYTICS_ID=
# VITE_ERROR_REPORTING_DSN=

# Deployment-specific
# ----------------------------
# Public URL path (useful for deployments in subdirectories)
VITE_PUBLIC_PATH=/

# CDN base URL (if applicable)
# VITE_CDN_URL=https://cdn.example.com